@{
    var currentAction = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PROG6212.PART2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212.PART2.styles.css" asp-append-version="true" />

    <!-- FullCalendar CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        .calendar {
            max-width: 100%;
            height: 200px; 
            margin: 10px auto; 
        }
        .sidebar {
            width: 200px;
            background-color: #343a40;
            padding: 1rem;
            padding-top: 80px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            border-right: 1px solid #dee2e6;
            z-index: 1;
        }

        .main-content {
            margin-left: 100px;
            padding: 80px 20px 20px 20px;
            flex: 1;
        }

        header {
            position: fixed;
            width: calc(100% - 200px);
            margin-left: -15px;
            background-color: #343a40;
            color: #343a40;
            top: 0;
            z-index: 2;
            height: 60px;
        }

        .sidebar nav a {
            display: block;
            padding: 15px;
            color: #f8f9fa;
            text-decoration: none;
            font-size: 16px;
            font-weight: 500;
            margin-bottom: 10px;
            border-radius: 4px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .sidebar nav a:hover {
                background-color: orangered;
                color: white;
            }

            .sidebar nav a.active {
                background-color: orangered;
                color: white;
            }
    </style>
</head>
<body>

    @if (currentAction != "Index")
    {
        <div class="sidebar">
            <nav>
                <a href="@Url.Action("Index1", "Dashboard")">Dashboard</a>
                <a href="@Url.Action("Index1", "SubmitClaim")">Submit Claim</a>
                <a href="@Url.Action("Index1", "ViewClaim")">View Claim</a>
                
            </nav>
        </div>

        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Claim System</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminView" asp-action="Index1">Admin View</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="SubmitClaim" asp-action="Index1">Submit Claim</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <!-- Main content -->
    <div class="main-content" style="padding-left: @(currentAction == "Index" ? "0" : "200px")">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            
        </div>
    </footer>
</body>
</html>